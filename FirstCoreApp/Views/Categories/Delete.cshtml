@model FirstCoreApp.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}
<h3 style="direction:rtl;">هل أنت متأكد من الحذف؟</h3>
<div style="direction:rtl;">
    <dl class="row">
        <dt class="col-sm-2">
            نوع الأخبار
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            تفاصيل
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="حذف" class="btn btn-danger" />
        </form>
    </div>
</div>
<a title="السابق" asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i></a>