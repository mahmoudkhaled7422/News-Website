@*@model List<Category>*@
@{

    IEnumerable<Category> cats = ViewData["cats"] as IEnumerable<Category>;
    IEnumerable<News> news = ViewData["news"] as IEnumerable<News>;
}
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center align-items-center">
    <h3 class="p-2">تصفح الأخبار حسب المجالات</h3>
</div>
<section id="featured" class="featured">
    <div class="container">
        <div class="row" style="direction:rtl;">
            @foreach (Category category in cats)
            {
                <div class="col-lg-4 mb-3" style="text-align:right;">
                    <a href="/Home/News/@category.Id">
                        <div class="icon-box">
                            <i class="bi bi-card-checklist"></i>
                            <h3>
                                @category.Title
                            </h3>
                            <p>@category.Description</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<hr />
<div class="text-center align-items-center">
 <h3  class="p-2">أحدث الأخبار علي موقعنا</h3>
</div>
<section id="blog" class="blog">
    <div class="container" data-aos="fade-up">
        <div class="row"  style="direction:rtl;">
            @foreach (News news1 in news)
            {

                <div class="col-lg-4 entries" style="direction:rtl;">

                    <article class="entry">

                        <div class="entry-img">
                            <img src="~/assets/img/blog/@news1.Image" alt="" class="card-img" width="100%" height="250px">
                        </div>

                    <div  style="overflow:hidden;text-overflow:ellipsis;height:33px">
                        <h2 class="entry-title">
                            <a href="/Home/newDetails/@news1.Id">@news1.Title</a>
                        </h2>
                    </div>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center"><i class="bi bi-clock"></i><time datetime="2020-01-01">@news1.Date</time></li>
                            </ul>
                        </div>

                        <div class="entry-content">
                            @*<p>
                                    @item.Topic
                                </p>*@
                            <div class="read-more">
                                <a href="/Home/newDetails/@news1.Id">المزيد</a>
                            </div>
                        </div>

                    </article><!-- End blog entry -->
                </div><!-- End blog entries list -->

            }
        </div>

    </div>
</section><!-- End Blog Section -->