@model FirstCoreApp.Models.News

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div style="direction:rtl;">
    <div>
        <a title="تعديل" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i></a>
    </div>
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row">
                <div class="col-lg-12 entries" style="direction:rtl;">

                    <article class="entry">

                        <div class="card-img">
                            <img src="~/assets/img/blog/@Model.Image" alt="" class="rounded" width="100%">
                        </div>
                        <hr/>
                        <h2 class="entry-title">
                            @Model.Title
                        </h2>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center"><i class="bi bi-clock"></i> <time datetime="2020-01-01">@Model.Date</time></li>
                            </ul>
                        </div>

                        <div class="entry-content">
                            <h4 class="text-danger">تفاصيل الخبر</h4>
                            <p>
                                @Model.Topic
                            </p>
                        </div>

                    </article>
                </div>

            </div>

        </div>
    </section>

</div>
<a title="السابق" asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i></a>