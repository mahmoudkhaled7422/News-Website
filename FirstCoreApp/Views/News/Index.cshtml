@model IEnumerable<FirstCoreApp.Models.News>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<section class="mt-4 container">

    <div class="container mt-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h2 class="text-center text-uppercase">الأخبار</h2>
            </div>
            <div class="card-body" style="direction:rtl;">
                <div class="mb-2">
                    <a title="إنشاء جديد" asp-action="Create" class="btn btn-sm btn-primary text-uppercase"><i class="fas fa-plus-circle m-2"></i></a>
                </div>
                <div class="table-responsive">

                    <table style="direction:rtl;" class="table table-bordered table-striped text-center table-hover">

                        <thead>
                            <tr>
                                <th class="text-center">
                                    صورة الخبر
                                </th>
                                <th class="text-center">
                                    عنوان الخبر
                                </th>
                                <th class="text-center">
                                    نوع الخبر
                                </th>
                                <th class="text-center">
                                    تاريخ الخبر
                                </th>
                                <th class="text-center">العمليات</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img width="100" height="100" src="~/assets/img/blog/@item.Image"
                                             class="rounded" alt="">
                                    </td>
                                    <td style="width:200px; overflow: hidden; text-overflow: ellipsis;">
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td style="width:auto; overflow: hidden; text-overflow: ellipsis;">
                                        @Html.DisplayFor(modelItem => item.Category.Title)
                                    </td>
                                    <td style="width:auto; overflow: hidden; text-overflow: ellipsis;">
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        <a title="تفاصيل" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success m-2"><i class="fa fa-info-circle"></i></a>
                                        <a title="تعديل" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning m-2"><i class="fa fa-edit"></i></a>
                                        <a title="حذف" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-2"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>